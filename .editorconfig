# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# CSS, SCSS, Less
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# HTML
[*.html]
indent_style = space
indent_size = 2

# Package files
[{package.json,pnpm-lock.yaml}]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

