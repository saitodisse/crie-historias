DATABASE_URL=postgresql://USER:PASSWORD@HOST/DB?sslmode=require
ENCRYPTION_KEY=change-this-to-at-least-32-characters
PORT=5000

# Auth mode
# If CLERK_SECRET_KEY is set, backend uses Clerk auth.
# If omitted, backend falls back to local dev auth.
CLERK_SECRET_KEY=
VITE_CLERK_PUBLISHABLE_KEY=

# Local auth fallback user
DEV_AUTH_USER_ID=local-dev-user
DEV_AUTH_FIRST_NAME=Dev
DEV_AUTH_LAST_NAME=User
DEV_AUTH_EMAIL=dev@example.com

# Optional
SEED_ON_STARTUP=true
PGSSLMODE=require

